<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ua.com.programmer.qrscanner.CameraFragment">

    <androidx.camera.view.PreviewView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>

    <ua.com.programmer.qrscanner.ViewfinderOverlay
        android:id="@+id/viewfinder_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/barcode_text_background"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:alpha="0.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scanning"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:padding="8dp"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:alpha="0.8"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:minHeight="56dp"
            android:minWidth="120dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:text="@string/share"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondary"
            app:backgroundTint="?attr/colorSecondary"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_share_white_24dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSecondary"
            style="@style/Widget.Material3.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:minHeight="56dp"
            android:minWidth="120dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:text="@string/search"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondary"
            app:backgroundTint="?attr/colorSecondary"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_search_white_24dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSecondary"
            style="@style/Widget.Material3.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:minHeight="56dp"
            android:minWidth="120dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:text="@string/reset"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondary"
            app:backgroundTint="?attr/colorSecondary"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_refresh_white_24dp"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSecondary"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_visibility_off_white_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="32dp"/>

</RelativeLayout>
