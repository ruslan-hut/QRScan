<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material 3 Dark Theme Component Styles -->
    
    <!-- Button Shape with 12dp corner radius -->
    <style name="Widget.Material3.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="Widget.Material3.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="Widget.Material3.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- CardView with Material 3 styling -->
    <style name="Widget.Material3.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">1dp</item>
    </style>
    
    <!-- TextInputLayout with rounded corners -->
    <style name="Widget.Material3.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
    
    <!-- AppBar Overlay for dark mode - ensure contrast -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Light">
        <!-- In dark mode, primary is light, so use dark text -->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="colorControlActivated">?attr/colorOnPrimary</item>
        <item name="colorControlHighlight">?attr/colorOnPrimary</item>
    </style>
</resources>

